generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      Role     @default(EMPLOYEE)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Define the one-to-one relationship
  employee Employee? @relation(name: "EmployeeToUser")

  @@map("users")
}

model Employee {
  id           Int         @id @default(autoincrement())
  name         String
  department   Department? @relation(fields: [departmentId], references: [id])
  departmentId Int?
  assetHistory Asset[]

  // Define the one-to-one relationship
  user   User? @relation(name: "EmployeeToUser", fields: [userId], references: [id])
  userId Int?  @unique // Add @unique to indicate one-to-one

  @@map("employees")
}

model Asset {
  id             Int       @id @default(autoincrement())
  name           String
  type           String
  serialNumber   String    @unique
  status         Status    @default(AVAILABLE)
  assignedUser   Employee? @relation(fields: [assignedUserId], references: [id])
  assignedUserId Int?

  @@map("assets")
}

model Department {
  id        Int        @id @default(autoincrement())
  name      String     @unique
  employees Employee[]

  @@map("departments")
}

enum Role {
  EMPLOYEE
  HR_MANAGER
}

enum Status {
  AVAILABLE
  CHECKED_OUT
}
